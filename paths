#!/bin/bash

PATH_INITPI_BACKUPS="/etc/initpi"

PATH_WPA_CONF="/etc/wpa_supplicant/wpa_supplicant.conf"
PATH_WPA_CONF_BACKUP="${PATH_INITPI_BACKUPS}/wpa_supplicant.conf"
PATH_SUDO_PASSWORD_CONF="/etc/sudoers.d/010_pi-nopasswd"
PATH_SUDO_PASSWORD_CONF_BACKUP="${PATH_INITPI_BACKUPS}/010_pi-nopasswd"
PATH_OLD_USER_HOME="/home/${OLD_USER}" #may be the same as PATH_USER_HOME if no new user is selected
PATH_NEW_USER_HOME="/home/${NEW_USER}"
PATH_USER_BACKUP="${PATH_INITPI_BACKUPS}/user"
PATH_USER_SSH="${PATH_NEW_USER_HOME}/.ssh"
PATH_USER_PUBKEYS="${PATH_USER_SSH}/authorized_keys"
PATH_SSH_CONF="/etc/ssh/sshd_config"
PATH_SSH_CONF_BACKUP="${PATH_INITPI_BACKUPS}/sshd_config"
PATH_FAIL2BAN="/etc/fail2ban"
PATH_FAIL2BAN_CONF="${PATH_FAIL2BAN}/jail.conf"
PATH_FAIL2BAN_LOCAL="${PATH_FAIL2BAN}/jail.local"
PATH_FSTAB="/etc/fstab"
PATH_FSTAB_BACKUP="${PATH_INITPI_BACKUPS}/fstab"

PATH_INITPI="${PATH_INITPI_DIR}/initpi"
PATH_INITPI_SERVICE="/etc/systemd/system/initpi.service"
PATH_INITPI_CONF="${PATH_INITPI_DIR}/initpi.conf"
PATH_INITPI_CONFIGURE="${PATH_INITPI_DIR}/configure"
PATH_INITPI_FINISH="${PATH_INITPI_DIR}/finish"
PATH_INITPI_WIFI="${PATH_INITPI_DIR}/wifi"
PATH_INITPI_UPDATE="${PATH_INITPI_DIR}/sysupdate"
PATH_INITPI_FIX="${PATH_INITPI_DIR}/sysfix"
PATH_INITPI_TIMEZONE="${PATH_INITPI_DIR}/timezone"
PATH_INITPI_NEWUSER="${PATH_INITPI_DIR}/newuser"
PATH_INITPI_NEWPASSWORD="${PATH_INITPI_DIR}/newpassword"
PATH_INITPI_PUBKEY="${PATH_INITPI_DIR}/pubkey"
PATH_INITPI_SSH="${PATH_INITPI_DIR}/ssh"
PATH_INITPI_EXT="${PATH_INITPI_DIR}/ext"

PATH_INITPI_NEXT="${PATH_INITPI_DIR}/next"

NETWORK_SCAN="${PATH_INITPI_DIR}/networkscan"
NETWORK_SCAN_LIST="${PATH_INITPI_DIR}/networkscanlist"

DEFAULT_USER="pi"
IS_NUMBER='^[0-9]+$'
PATH_TZ="/usr/share/zoneinfo/posix"
